<script>
    // Countdown configuration
    const startingCountdownValue = 10;
    const radius = 40; // Set radius for the new circle
    const circumference = 2 * Math.PI * radius; // Calculate circumference
    let countdownValue = startingCountdownValue; // Starting value of the countdown
    const countdownElement = document.getElementById('countdown-number');
    const longUrlElement = document.getElementById('long-url');
    const progressCircle = document.querySelector('.progress-circle');
    const countdownCircle = document.querySelector('.countdown');

    // Update the circle's progress by adjusting stroke-dashoffset
    function updateCircleProgress(value) {
        const offset = circumference - (value / startingCountdownValue) * circumference;
        progressCircle.style.strokeDashoffset = offset;
    }

    // Function to handle the countdown and URL reveal
    function startCountdown() {
        // Set initial values for the progress circle
        progressCircle.style.strokeDasharray = circumference;
        progressCircle.style.strokeDashoffset = 0;

        // Update the countdown every 1 second
        const countdownInterval = setInterval(() => {
            countdownElement.textContent = countdownValue; // Update the countdown display
            updateCircleProgress(countdownValue); // Update circle progress
            countdownValue--; // Decrease the countdown value

            // When the countdown reaches 0
            if (countdownValue < -1) {
                clearInterval(countdownInterval); // Stop the countdown
                countdownCircle.style.display = 'none'; // Hide the countdown number
                longUrlElement.style.display = 'block'; // Display the long URL
            }
        }, 1000); // 1000 milliseconds = 1 second
    }

    // Start the countdown when the page loads
    window.onload = () => {
        updateCircleProgress(countdownValue); // Initialize the circle's progress
        startCountdown();
    };
</script>