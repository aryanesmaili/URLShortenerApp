<div class="py-4">
    <div class="container-fluid">
        <div class="row">
            <!-- Click Trends -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Click Trends
                    </div>
                    <div class="card-body">
                        <div class="chart-placeholder">
                            Chart visualization goes here
                        </div>
                    </div>
                </div>
            </div>

            <!-- Time of Day Analysis -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        Time of Day Analysis
                    </div>
                    <div class="card-body">
                        <div class="chart-placeholder">
                            Chart visualization goes here
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Lists Section -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Top Clicked Locations
                    </div>
                    <div class="card-body p-0">
                        <ol class="top-list">
                            <li>Location 1</li>
                            <li>Location 2</li>
                            <li>Location 3</li>
                            <li>Location 4</li>
                            <li>Location 5</li>
                        </ol>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Top Devices Used
                    </div>
                    <div class="card-body p-0">
                        <ol class="top-list">
                            <li>Device 1</li>
                            <li>Device 2</li>
                            <li>Device 3</li>
                            <li>Device 4</li>
                            <li>Device 5</li>
                        </ol>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        Top Clicked URLs
                    </div>
                    <div class="card-body p-0">
                        <ol class="top-list">
                            <li>Short URL 1</li>
                            <li>Short URL 2</li>
                            <li>Short URL 3</li>
                            <li>Short URL 4</li>
                            <li>Short URL 5</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- Recent Activity -->
            <div class="col-12 mb-4">
                <div class="card recent-activity">
                    <div class="card-header">
                        Recent Activity
                    </div>
                    <div class="card-body p-3">
                        <table class="table  table-hover">
                            <thead>
                                <tr>
                                    <th>Long URL</th>
                                    <th>Short Code</th>
                                    <th>Date Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="url-cell">https://example.com/some-long-url</td>
                                    <td>exmpl123</td>
                                    <td>2024-10-26</td>
                                    <td>
                                        <button class="action-btn" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                        <button class="action-btn" title="Open">
                                            <i class="fas fa-external-link-alt"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
